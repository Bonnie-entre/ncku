#include <stdio.h>

int main(void){
    int n, a[50][50];
    scanf("%d", &n);
    
    int c=n/2, r=0;
    a[r][c]=1;
    for(int i=2; i<=n*n; i++)
    {
        r=(r-1+n)%n;
        c=(c+1)%n;

        if (a[r][c]==0) { a[r][c]=i; }
        else 
        {
            r= (r+2)%n;
            c=(c-1+n)%n;
            a[r][c] = i;
        }
    }

    for(int i=0; i<n; i++){
      for(int j=0; j<n; j++)
      { printf("%d ", a[i][j]); }
      printf("\n");
    }
    
    return 0;
}
