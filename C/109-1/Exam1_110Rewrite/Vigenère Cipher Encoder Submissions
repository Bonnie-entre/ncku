#include <stdio.h>

int main(void){
    int n, ai[100];
    char a[100], w[100000]; //多加3個零，就不RunTimeError了！
    
    scanf("%d ", &n);
    for(int i=0; i<n; i++)
    {
    	scanf("%1c",&a[i]);
        ai[i] = a[i]-'a';
    }
    
    getchar();
    int i=0;
    while(1)
    {
    	w[i] =getchar();
        if(w[i]==10) { break;}
        i++;
    }
    
    int count=0;
    for(int j=0; j<i; j++){
    	if(w[j]>='a' && w[j]<='z')
        {
            w[j] = ((w[j]-'a')+ai[count%n])%26+'a';
            count++;
        }
            
        if (w[j]>='A' && w[j]<='Z')
        {
        	w[j] = ((w[j]-'A')+ai[count%n])%26+'A';
            count++;
        }
        
        printf("%c", w[j]);
    }
    
    return 0;
}
