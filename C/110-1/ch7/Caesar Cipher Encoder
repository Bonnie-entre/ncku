#include <stdio.h>

int main(void){
    int k;
    char c;
    
    scanf("%d ", &k);
    while(k<0)
    {
        k+=26;
    }
    
    do{
        c = getchar();
        if (c>='a'&&c<='z')
            c = (c-'a'+k)%26+'a';
        if ( c>='A' && c<='Z')
            c = (c-'A'+k)%26+'A';
        putchar(c);
    }while(c!='\n');
    
    return 0;
}

