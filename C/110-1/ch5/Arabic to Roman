#include <stdio.h>
int main(void){
    int num, t;
    scanf("%d", &num);
    
    //千位數
    t = num/1000;
    for (int i=0; i<t; i++) { printf("M"); }
    //百位數
    t = num%1000/100;
    if (t==4){printf("CD");}
    if (t==9){printf("CM");}
    if (t==5){printf("D");}
    if (t>0 && t<4) {for (int i=0; i<t; i++) { printf("C"); }}
    if (t>5 && t<9) {
        printf("D");
        for (int i=0; i<t-5; i++) { printf("C"); }
    }
    
    //十位數
    t = num%100/10;
    if (t==4){printf("XL");}
    if (t==9){printf("XC");}
    if (t==5){printf("L");}
    if (t>0 && t<4) {for (int i=0; i<t; i++) { printf("X"); }}
    if (t>5 && t<9) {
        printf("L");
        for (int i=0; i<t-5; i++) { printf("X"); }
    }
    
    //個位數
    t = num%10;
    if (t==4){printf("IV");}
    if (t==9){printf("IX");}
    if (t==5){printf("V");}
    if (t>0 && t<4) {for (int i=0; i<t; i++) { printf("I"); }}
    if (t>5 && t<9) {
        printf("V");
        for (int i=0; i<t-5; i++) { printf("I"); }
    }
    
    return 0;
}
